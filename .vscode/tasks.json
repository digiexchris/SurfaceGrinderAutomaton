{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "process",
            "isBuildCommand": true,
            "command": "cmake",
            "args": [
                "--build",
                "--preset ${command:cmake.activeBuildPresetName}"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": "$gcc",
            "windows": {
                "command": "cmake.exe"
            }
        },
        {
            "label": "Flash",
            "type": "process",
            "linux": {
                "command": "${workspaceFolder}/tools/linux/flash.sh",
            },
            "windows": {
                "command": "${workspaceFolder}/tools/win64/flash.bat",
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "args": [
                "${workspaceFolder}/build/src/SurfaceGrinderAtomaton.elf"
            ],
            "hide": true,
            "problemMatcher": []
        },
        {
            "label": "Flash (Debug)",
            "type": "process",
            "linux": {
                "command": "${workspaceFolder}/tools/linux/flash.sh",
            },
            "windows": {
                "command": "${workspaceFolder}/tools/win64/flash.bat",
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "args": [
                "${workspaceFolder}/build/src/SurfaceGrinderAtomaton.elf"
            ],
            "problemMatcher": []
        },
        {
            "label": "Flash (Tests)",
            "type": "process",
            "command": "${workspaceFolder}/flash.sh",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "args": [
                "${workspaceFolder}/build/tests/SurfaceGrinderAtomaton_tests.elf"
            ],
            "problemMatcher": [],
        },
        {
            "label": "Reset Target",
            "type": "process",
            "command": "${workspaceFolder}/tools/linux/reset.sh",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "args": [
                // "-f",
                // "interface/cmsis-dap.cfg",
                // "-f",
                // "target/rp2040.cfg",
                // "-c",
                // "\"init ; reset halt ; rp2040.core1 arp_reset assert 0 ; rp2040.core0 arp_reset assert 0 ; exit\""
            ],
            "problemMatcher": [],
        }
    ]
}